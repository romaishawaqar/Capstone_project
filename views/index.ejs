<%- include("partials/header.ejs") %>
<% if (locals.BooksName && locals.RandomContext) { %>
    <h1><%= BooksName %></h1> 
    <%= RandomContext %>
    <h5><%= Datee %></h5>
<% }else{ %>
    <h1>Welcome to the collection of books</h1>
    <form action="/submit" method="POST">
        <label for="bookName">Enter Book Name:</label>
        <input type="text" id="bookName" name="bookName"><br>
        <label for="RandomContext">Write your Story:</label>
        <input type="text" id="RandomContext" name="RandomContext">
        <input type="submit" value="Submit">
      </form>
<%}%>


